{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "🔄 Upload program",
            "type": "shell",
            "command": "..\\tools\\ch32v0-uprog.exe --baud 460800 --device COM18 .\\build\\firmware.elf.bin"
        },
        {
            "label": "♻️ Reboot bootloader cmd",
            "type": "shell",
            "command": "python",
            "args": [
                "..\\tools\\serialsend.py",
                "COM18",
                "460800",
                "command: reboot bootloader"
            ],
        },
        {
            "label": "🔁 Reboot program cmd",
            "type": "shell",
            "command": "python",
            "args": [
                "..\\tools\\serialsend.py",
                "COM18",
                "460800",
                "command: reboot"
            ],
        },
        {
            "label": "🔍 Read bootloader info cmd",
            "type": "shell",
            "command": "python",
            "args": [
                "..\\tools\\serialsend.py",
                "COM18",
                "460800",
                "command: read bootloader info"
            ],
        },
        {
            "label": "⚙️ Example cmd (mode 0)",
            "type": "shell",
            "command": "python",
            "args": [
                "..\\tools\\serialsend.py",
                "COM18",
                "460800",
                "command: mode 0"
            ],
        },
        {
            "label": "⚙️ Example cmd (mode 1)",
            "type": "shell",
            "command": "python",
            "args": [
                "..\\tools\\serialsend.py",
                "COM18",
                "460800",
                "command: mode 1"
            ],
        },
        {
            "label": "🔨 CMake build",
            "type": "shell",
            "command": "cmake --build ${command:cmake.buildDirectory} --target all",
            "problemMatcher": "$gcc"
        },
        {
            "label": "🚀 Update from bootloader",
            "dependsOrder": "sequence",
            "dependsOn": [
                "🔨 CMake build",
                "🔄 Upload program"
            ]
        },
        {
            "label": "🚀 Update from program",
            "dependsOrder": "sequence",
            "dependsOn": [
                "🔨 CMake build",
                "♻️ Reboot bootloader cmd",
                "🔄 Upload program"
            ]
        },
        {
            "label": "🚀⚙️ OpenOCD flash",
            "type": "shell",
            "options": {
                "env": {
                    "ELF_NAME": "${command:cmake.getLaunchTargetPath}"
                }
            },
            "windows": {
                "command": "${config:cortex-debug.openocdPath.windows}"
            },
            "args": [
                "-f${workspaceFolder}/wch/wch-riscv.cfg",
                "-f${workspaceFolder}/wch/wch-program.cfg"
            ],
            "dependsOn": "🔨 CMake build"
        },
    ]
}
